{
  "python.pythonPath": "venv\\Scripts\\python.exe",
  // Pylint imports modules to effectively identify valid methods and attributes.
  // It was decided that importing c extensions that are not part of the python stdlib
  // is a security risk and could introduce malicious code.
  // Trusted modules list
  "python.linting.pylintArgs": [
    "--extension-pkg-whitelist=pygame, lxml, cv2"
  ],
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  "files.watcherExclude": {
    "**/.venv/**": true
  },
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.autofetchPeriod": 600
}